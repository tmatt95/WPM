{% extends 'parts.html.twig' %}

{% block title %}Parts: {{part.name}}{% endblock %}

{% block body %}
    <h1>View Part - {{part.name}}</h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('parts_find') }}">Parts</a></li>
        <li class="active">{{part.name}}</li>
    </ol>
    {% if displayMessage.value != '' %}
        <div class="row">
            <div class="col-xs-12">
                <div class="alert {{displayMessage.class}}" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    {{displayMessage.value}}
                </div>
            </div>
        </div>
    {% endif %}
    <h3>Add/Use</h3>
    {{ form_start(FPartChange) }}
    {{ form_widget(FPartChange) }}
    {{ form_end(FPartChange) }}

    <h3>Info</h3>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
    
    <h3>History</h3>
    <p class="text-muted">No history for this part</p>
{% endblock %}
